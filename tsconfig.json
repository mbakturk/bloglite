{
    "compilerOptions": {
        "lib": ["es6", "dom"],
        "target": "es6",
        "module": "commonjs",
        "moduleResolution": "node",
        "types": ["reflect-metadata"],
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "sourceMap": true,
        "outDir": "dist"
    },

    "include": [
        "src/*"
    ],
    "exclude": [
        "node_modules"
    ]
}